                <Button x:Name="MARTES_01_5" Grid.Column="2" Grid.Row="5" Text="" BorderColor="White" BorderWidth="1" CornerRadius="0" BackgroundColor="#E2E2E2"/>
                <Button x:Name="MARTES_01_6" Grid.Column="2" Grid.Row="6" Text="" BorderColor="White" BorderWidth="1" CornerRadius="0" BackgroundColor="#E2E2E2"/>
                <Button x:Name="MARTES_01_7" Grid.Column="2" Grid.Row="7" Text="" BorderColor="White" BorderWidth="1" CornerRadius="0" BackgroundColor="#E2E2E2"/>
                <Button x:Name="MARTES_01_8" Grid.Column="2" Grid.Row="8" Text="" BorderColor="White" BorderWidth="1" CornerRadius="0" BackgroundColor="#E2E2E2"/>

                <!-- Miercoles -->
                <Button x:Name="MIERCOLES_01_1" Grid.Column="3" Grid.Row="1" Text="" BorderColor="White" BorderWidth="1" CornerRadius="0" BackgroundColor="Transparent"/>
                <Button x:Name="MIERCOLES_01_2" Grid.Column="3" Grid.Row="2" Text="" BorderColor="White" BorderWidth="1" CornerRadius="0" BackgroundColor="Transparent"/>
                <Button x:Name="MIERCOLES_01_3" Grid.Column="3" Grid.Row="3" Text="" BorderColor="White" BorderWidth="1" CornerRadius="0" BackgroundColor="Transparent"/>
                <Button x:Name="MIERCOLES_01_4" Grid.Column="3" Grid.Row="4" Text="" BorderColor="White" BorderWidth="1" CornerRadius="0" BackgroundColor="Transparent"/>
                <Button x:Name="MIERCOLES_01_5" Grid.Column="3" Grid.Row="5" Text="" BorderColor="White" BorderWidth="1" CornerRadius="0" BackgroundColor="Transparent"/>
                <Button x:Name="MIERCOLES_01_6" Grid.Column="3" Grid.Row="6" Text="" BorderColor="White" BorderWidth="1" CornerRadius="0" BackgroundColor="Transparent"/>
