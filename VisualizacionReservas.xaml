                <Button x:Name="VIERNES_01_2" Grid.Column="5" Grid.Row="2" Text="" BorderColor="White" BorderWidth="1" CornerRadius="0" BackgroundColor="Transparent"/>
                <Button x:Name="VIERNES_01_3" Grid.Column="5" Grid.Row="3" Text="" BorderColor="White" BorderWidth="1" CornerRadius="0" BackgroundColor="Transparent"/>
                <Button x:Name="VIERNES_01_4" Grid.Column="5" Grid.Row="4" Text="" BorderColor="White" BorderWidth="1" CornerRadius="0" BackgroundColor="Transparent"/>
                <Button x:Name="VIERNES_01_5" Grid.Column="5" Grid.Row="5" Text="" BorderColor="White" BorderWidth="1" CornerRadius="0" BackgroundColor="Transparent"/>
                <Button x:Name="VIERNES_01_6" Grid.Column="5" Grid.Row="6" Text="" BorderColor="White" BorderWidth="1" CornerRadius="0" BackgroundColor="Transparent"/>
                <Button x:Name="VIERNES_01_7" Grid.Column="5" Grid.Row="7" Text="" BorderColor="White" BorderWidth="1" CornerRadius="0" BackgroundColor="Transparent"/>
                <Button x:Name="VIERNES_01_8" Grid.Column="5" Grid.Row="8" Text="" BorderColor="White" BorderWidth="1" CornerRadius="0" BackgroundColor="Transparent"/>

            </Grid>
        </VerticalStackLayout>
        
    </ScrollView>
</ContentPage>