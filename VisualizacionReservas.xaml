                <Button x:Name="LUNES_01_5" Grid.Column="1" Grid.Row="5" Text="" BorderColor="White" BorderWidth="1" CornerRadius="0" BackgroundColor="Transparent"/>
                <Button x:Name="LUNES_01_6" Grid.Column="1" Grid.Row="6" Text="" BorderColor="White" BorderWidth="1" CornerRadius="0" BackgroundColor="Transparent"/>
                <Button x:Name="LUNES_01_7" Grid.Column="1" Grid.Row="7" Text="" BorderColor="White" BorderWidth="1" CornerRadius="0" BackgroundColor="Transparent"/>
                <Button x:Name="LUNES_01_8" Grid.Column="1" Grid.Row="8" Text="" BorderColor="White" BorderWidth="1" CornerRadius="0" BackgroundColor="Transparent"/>

                <!-- Martes -->
                <Button x:Name="MARTES_01_1" Grid.Column="2" Grid.Row="1" Text="" BorderColor="White" BorderWidth="1" CornerRadius="0" BackgroundColor="#E2E2E2"/>
                <Button x:Name="MARTES_01_2" Grid.Column="2" Grid.Row="2" Text="" BorderColor="White" BorderWidth="1" CornerRadius="0" BackgroundColor="#E2E2E2"/>
                <Button x:Name="MARTES_01_3" Grid.Column="2" Grid.Row="3" Text="" BorderColor="White" BorderWidth="1" CornerRadius="0" BackgroundColor="#E2E2E2"/>
