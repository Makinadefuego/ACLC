                <Button x:Name="MIERCOLES_01_8" Grid.Column="3" Grid.Row="8" Text="" BorderColor="White" BorderWidth="1" CornerRadius="0" BackgroundColor="Transparent"/>

                <!-- Jueves -->
                <Button x:Name="JUEVES_01_1" Grid.Column="4" Grid.Row="1" Text="" BorderColor="White" BorderWidth="1" CornerRadius="0" BackgroundColor="#E2E2E2"/>
                <Button x:Name="JUEVES_01_2" Grid.Column="4" Grid.Row="2" Text="" BorderColor="White" BorderWidth="1" CornerRadius="0" BackgroundColor="#E2E2E2"/>
                <Button x:Name="JUEVES_01_3" Grid.Column="4" Grid.Row="3" Text="" BorderColor="White" BorderWidth="1" CornerRadius="0" BackgroundColor="#E2E2E2"/>
