<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SCLC.Pages.EleccionReserva"
             Title="EleccionReserva">
    <ScrollView>
        <VerticalStackLayout >
            <Grid x:Name="contenedor" RowDefinitions="*, auto" ColumnDefinitions="*,auto" BackgroundColor="Red"  VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                <VerticalStackLayout Grid.Row="0" Grid.Column="0"  BackgroundColor="#FFC107">
                    <Label x:Name="labelLab" Text="Laboratorio : " FontAttributes="Bold" TextColor="Black"/>
                    <Label x:Name="labelDate" Text="Fecha : " FontAttributes="Bold" TextColor="Black"/>
                    <Label x:Name="labelTime" Text="Hora : " FontAttributes="Bold" TextColor="Black"/>
                </VerticalStackLayout>

                <Label x:Name="labelModulo" Text="Modulo " FontAttributes="Bold" TextColor="Black" Grid.Row="0" Grid.Column="1" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>

                <DatePicker  Grid.Row="1" Grid.Column="0" Grid.RowSpan="1" VerticalOptions="Center" HorizontalOptions="Center"></DatePicker>
            </Grid>

        </VerticalStackLayout>
        
    </ScrollView>
</ContentPage>